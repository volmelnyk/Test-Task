@model IEnumerable<string>

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-md-offset-4 col-sm-4 col-sm-offset-4 ">
        <div class="form-group">
            <label for="file" class="control-label">Виберіть файл:</label>
            <input type="file" name="file" id="file" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="file" class="control-label">Ключове слово для пошуку:</label>
            <input type="text" name="keyWord" id=" keyWord" class="form-control" required />
        </div>
        <input type="submit" class="btn btn-success btn-block" value="Зберегти дані" />
        <br />
    </div>

    <div class="col-lg-12 col-md-12 col-sm-12">
        <br />
        <h2> Речення, які вже  в базі:</h2>
        <div class="pre-scrollable">
            <table class="table" id="table">
                @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @item
                        </th>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>


}
